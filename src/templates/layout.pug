- var siteName = 'Viagens'

doctype html
html.h-100(lang='pt-br')
    
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/bootstrap/css/style.css")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous")

        block head
            title #{siteName} - #{title}

    body.d-flex.flex-column.h-100
        header.top
            div.container
                nav.navbar.navbar-expand-lg
                    a.navbar-brand(href="/")
                        img(src="/img/bus.png" alt="Logo da Viagem")
                    button.navbar-toggler.ml-auto(type="button" data-toggle="collapse" data-target="#navbarSite")
                        span.navbar-toggler-icon.icon-bar
                    div.collapse.navbar-collapse(id="navbarSite")
                        ul.nav.navbar-nav
                            li.nav-item
                                a.nav-link.text-dark.h5(href='/') Inicio
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/sobre') Sobre
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/historico') Hist√≥rico
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/criar') Criar Viagem
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/galeria') Galeria
                        ul.nav.navbar-nav.ml-auto
                            li.nav-item
                                a.nav-link.text-light.h6.card-link(href='/', data-toggle="modal", data-target="#loginModal") Login
                            li.nav-item
                                a.nav-link.text-light.h6.card-link(href='/', data-toggle="modal", data-target="#cadModal") Cadastro
                // --- MODAL LOGIN ---
                div.modal.fade(id="loginModal" tabindex="-1" role="dialog")
                    div.modal-dialog(role="document")
                        div.modal-content
                            diiv.modal-header
                                h5.modal-title Login
                                i.fa.fa-window-close.fa-2x(data-dismiss="modal" aria-hidden="true")
                            div.modal-body
                                div.container
                                    div.row.justify-content-center.mb-5
                                        div.col-sm-12.col-md-10.col-lg-10
                                            form
                                                div.form-row
                                                    div.form-group.col-sm-12
                                                        label(for="inputEmail") Email:
                                                        input.form-control(type="text", id="inputEmail", placeholder="Digite seu email")
                                                div.form-row
                                                    div.form-group.col-sm-8
                                                        label(for="inputSenha") Senha:
                                                        input.form-control(type="text", id="inputSenha", placeholder="Digite sua senha")
                                                div.form-row
                                                    div.form-group.col-sm-12
                                                        div.form-check
                                                            input.form-check-input(type="checkbox")
                                                            label.form-check-label Lembrar Senha
                                                div.form-row
                                                    div.col-sm-12
                                                        button.btn.btn-primary(type="submit") Entrar       
                
                // --- MODAL Cadastro ---
                div.modal.fade(id="cadModal" tabindex="-1" role="dialog")
                    div.modal-dialog.modal-lg(role="document")
                        div.modal-content
                            diiv.modal-header
                                h5.modal-title Cadastro
                                i.fa.fa-window-close.fa-2x(data-dismiss="modal" aria-hidden="true")
                            div.modal-body
                                div.container-fluid
                                    div.row.justify-content-center.mb-5
                                        div.col-sm-12.col-md-10.col-lg-8
                                            form
                                                div.form-row
                                                    div.form-group.col-sm-12
                                                        label(for="inputNome") Nome:
                                                        input.form-control(type="text", id="inputNome", placeholder="Digite seu nome")
                                                div.form-row
                                                    div.form-group.col-sm-6
                                                        label(for="inputCurso") Curso:
                                                        input.form-control(type="text", id="inputCurso", placeholder="Digite seu curso")
                                                    div.form-group.col-sm-6
                                                        label(for="inputSemestre") Semestre:
                                                        input.form-control(type="text", id="inputSemestre", placeholder="Digite seu semestre")
                                                div.form-row
                                                    div.form-group.col-sm-6
                                                        label(for="inputCpf") CPF:
                                                        input.form-control(type="number", id="inputCpf", placeholder="Digite seu CPF")
                                                    div.form-group.col-sm-6
                                                        label(for="inputRg") RG:
                                                        input.form-control(type="number", id="inputRg", placeholder="Digite seu RG")
                                                div.form-row
                                                    div.form-group.col-sm-12
                                                        label(for="inputEmail") Email:
                                                        input.form-control(type="text", id="inputEmail", placeholder="Digite seu email")
                                                div.form-row
                                                    div.form-group.col-sm-6
                                                        label(for="inputSenha") Senha:
                                                        input.form-control(type="text", id="inputSenha", placeholder="Digite sua senha")
                                                div.form-row 
                                                    div.col-sm-12
                                                        button.btn.btn-primary(type="submit") Cadastrar-se       
                        
        script(type="text/javascript" src="/bootstrap/js/jquery-3.5.1.min.js")
        script(type="text/javascript" src="/bootstrap/js/popper.min.js")
        script(type="text/javascript" src="/bootstrap/js/bootstrap.min.js")   
        script(type="module" src="/database/insert.js")         

        main.flex-shrink-0(role="main")

            block content