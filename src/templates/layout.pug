- var siteName = 'Viagens'

doctype html
html.h-100(lang='pt-br')
    
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/bootstrap/css/style.css")

        block head
            title #{siteName} - #{title}

    body.d-flex.flex-column.h-100.collor-blue
        header.top
            div.container
                nav.navbar.navbar-expand-lg
                    a.navbar-brand(href="/")
                        img(src="/img/bus.png" alt="Logo da Viagem")
                    button.navbar-toggler.ml-auto(type="button" data-toggle="collapse" data-target="#navbarSite")
                        span.navbar-toggler-icon.icon-bar
                    div.collapse.navbar-collapse(id="navbarSite")
                        ul.nav.navbar-nav.ml-auto
                            li.nav-item
                                a.nav-link.text-dark.h5(href='/') Inicio
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/sobre') Sobre
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/login') Acesso Professor
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/') Pagamento
                            li.nav-item
                                a.nav-link.text-dark.h5.ml-1(href='/galeria') Galeria

        script(type="text/javascript" src="/bootstrap/js/jquery-3.5.1.min.js")
        script(type="text/javascript" src="/bootstrap/js/popper.min.js")
        script(type="text/javascript" src="/bootstrap/js/bootstrap.min.js")   
        script(type="module" src="/database/insert.js")         
